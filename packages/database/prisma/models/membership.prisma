// 3. THE BRIDGE (The "Visa")
// This is the "Multi-Context" part. A user can be an 'Admin' in App A but a 'Member' in App B.
model ApplicationMembership {
  id String @id @default(cuid())

  // Foreign Keys
  userId        String
  applicationId String

  // Scoped Permissions
  role     String  @default("USER") // e.g., "OWNER", "ADMIN", "USER"
  isActive Boolean @default(true) // New: Pause access to specific apps
  metadata Json    @default("{}") // New: App-specific user settings

  // Timestamps
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // Back-relations
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  sessions    Session[]

  // A user can only have one membership per application
  @@unique([userId, applicationId])
  @@index([applicationId])
  @@map("application_memberships")
}
