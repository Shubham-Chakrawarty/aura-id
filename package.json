{
  "name": "aura-id",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "pnpm -r --if-present run lint",
    "typecheck": "pnpm -r --if-present run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "pnpm -r --if-present run build",
    "dev": "pnpm -r --if-present run dev",
    "test": "pnpm -r --if-present run test",
    "test:watch": "pnpm -r --if-present run test:watch",
    "ci-test": "pnpm install && pnpm format && pnpm lint && pnpm typecheck && pnpm test && pnpm build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:up:test": "docker compose -f docker-compose.test.yml up -d",
    "docker:down:test": "docker compose -f docker-compose.test.yml down"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "prettier": "^3.7.4"
  }
}
