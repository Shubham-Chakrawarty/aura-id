{
  "extends": "@aura/typescript-config/server.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "express", "vitest/globals"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
